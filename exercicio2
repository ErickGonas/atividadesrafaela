import java.util.*;
public class Main {
    public static void main(String[] args) {
       
        Scanner ler = new Scanner(System.in);
        int valor;
        double cubo,quadrado,raiz;
        while (true){
        
        System.out.println("Digite o número que será calculado: ");
        valor = ler.nextInt();
        
        if (valor <= 0) {
            System.out.println("Você não ta querendo calcular numero negativo não né");
        break;    
        }
            System.out.println("Aqui está o resultado do cálculo de: "+ valor);
            
                cubo = Math.pow(valor, 3);
                System.out.println("O valor ao cubo do número é: " + cubo);
                
                quadrado = Math.pow(valor, 2);
                System.out.println("O valor ao quadrado do número é: " + quadrado);
                
                raiz = Math.sqrt(valor);
                System.out.printf("A raiz do número é: %.2f%n", raiz);
                
                }
    }
}    
